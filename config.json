{
  "dependencies": {
    "microservice-config": {
      "url": "github.com:vicjicaman/microservice-config.git",
      "version": "1.70.1-master"
    }
  },
  "config": [ {
      "name": "SERVICE_GRAPH",
      "value": "home-graph-service",
      "type": "id"
    },
    {
      "name": "SERVICE_WEB",
      "value": "home-web-service",
      "type": "id"
    },
    {
      "name": "DEPLOYMENT_GRAPH",
      "value": "home-graph-deployment",
      "type": "id"
    },
    {
      "name": "DEPLOYMENT_WEB",
      "value": "home-web-deployment",
      "type": "id"
    },
    {
      "name": "BASE_ROUTE",
      "value": "/",
      "type": "path"
    },
    {
      "name": "BASE_ROUTE_APP",
      "value": "${BASE_ROUTE}",
      "type": "path"
    },
    {
      "name": "BASE_ROUTE_BACKEND",
      "value": "${BASE_ROUTE}backend",
      "type": "path"
    },
    {
      "name": "INTERNAL_PORT_APP",
      "value": 3000,
      "type": "port"
    },
    {
      "name": "ROUTE_GRAPH",
      "value": "${BASE_ROUTE_BACKEND}/graphql",
      "type": "route"
    },
    {
      "name": "ROUTE_EVENTS",
      "value": "${BASE_ROUTE_BACKEND}/events",
      "type": "route"
    },
    {
      "name": "INTERNAL_PORT_GRAPH",
      "value": 4000,
      "type": "port"
    },
    {
      "name": "INTERNAL_HOST_BACKEND",
      "value": "${SERVICE_GRAPH}.${NAMESPACE@microservice-config}",
      "type": "host"
    },
    {
      "name": "INTERNAL_URL_GRAPH",
      "value": "http://${INTERNAL_HOST_BACKEND}:${INTERNAL_PORT_GRAPH}${ROUTE_GRAPH}",
      "type": "url"
    },
    {
      "name": "INTERNAL_URL_EVENTS",
      "value": "${INTERNAL_HOST_BACKEND}:${INTERNAL_PORT_GRAPH}${ROUTE_EVENTS}",
      "type": "url"
    },
    {
      "name": "EXTERNAL_URL_GRAPH",
      "value": "http://${HOST@microservice-config}${ROUTE_GRAPH}",
      "type": "url"
    },
    {
      "name": "EXTERNAL_URL_EVENTS",
      "value": "${HOST@microservice-config}${ROUTE_EVENTS}",
      "type": "url"
    }
  ]
}
